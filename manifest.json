{
  "name": "Cupola VR Viewer",
  "description": "Connects your Oculus Rift to Web-based VR demos for low-latency head-tracking.",
  "version": "0.1",
  "manifest_version": 2,
  "minimum_chrome_version": "26",
  "icons": {
    "128": "images/cupola-128.png"
  },
  "app": {
    "background": {
      "scripts": ["js/background.js"]
    }
  },
  "permissions": ["usb", "webview", "fullscreen"],
  "optional_permissions": [ {"usbDevices": [{"vendorId": 10291, "productId": 1}]}]
}